[user]
  name = Dan Thompson
  email = dwthompson@gmail.com

[github]
  user = danthompson

[credential]
  helper = osxkeychain

[apply]
  whitespace = nowarn

[core]
  editor = vim
  excludesfile = ~/.gitignore
  autocrlf = input

[merge]
  tool = opendiff

[push]
  default = current

[color]
  ui = auto

[color "branch"]
  current = green
  local = white
  remote = cyan

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color "interactive"]
  header = white bold
  prompt = green bold
  help = cyan

[alias]
  a = add
  b = branch
  c = commit
  cm = commit -m
  cl = clone
  co = checkout
  cp = cherry-pick
  d = diff
  dc = diff --cached
  l = log --graph --abbrev-commit --date=relative --decorate --all
  re = rebase
  st = stash
  sub = submodule
  s = status

[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
